<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Sistem Penyewaan Lapangan</title>
    <link rel="stylesheet" href="../styles/styles.css" />
  </head>

  <body>
    <form class="container" method="POST" action="/users/login">
      <h1 class="form-title">Login Page</h1>

      <% if (messages.error) { %>
        <div class="error"><%= messages.error %></div>
      <% } %>

      <% Object.entries(flash).forEach(([key, value]) => { %>
        <% value.forEach(val => { %>
          <div class="<%= key === 'error' ? 'error' : 'success' %>"><%= val %></div>
        <% }) %>
      <% }) %>

      <div class="input-container">
        <label for="username" class="input-label">Masukkan Username</label>
        <input
          type="text"
          class="input"
          placeholder="username"
          id="username"
          name="username"
          required
        />
      </div>
      <div class="input-container">
        <label for="password" class="input-label">Masukkan Password</label>
        <input
          type="password"
          class="input"
          placeholder="password"
          id="password"
          name="password"
          required
        />
      </div>
      <button type="submit" id="login" class="button">Sign In</button>
      <p class="link">
        Don't have an account? 
        <a href="/users/register">Register</a>
      </p>
    </form>
  </body>
</html>
