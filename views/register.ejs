<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Sistem Penyewaan Lapangan</title>
    <link rel="stylesheet" href="../styles/styles.css" />
  </head>

  <body>
    <form class="container" method="POST" action="/users/register">
      <h1>REGISTER</h1>
      <div class="input-container">
        <label for="username" class="input-label">Username</label>
        <input
          type="text"
          class="input"
          placeholder="Masukkan Username"
          id="username"
          name="username"
          required
        />
      </div>
      <div class="input-container">
        <label for="password" class="input-label">Password</label>
        <input
          type="password"
          class="input"
          placeholder="Masukkan Password"
          id="password"
          name="password"
          required
        />
      </div>
      <div class="input-container">
        <label for="display_name" class="input-label">Display Name</label>
        <input
          type="text"
          class="input"
          placeholder="Masukkan Display Name"
          id="display_name"
          name="displayName"
          required
        />
      </div>
      <div class="input-container">
        <label for="email" class="input-label">Email</label>
        <input
          type="text"
          class="input"
          placeholder="Masukkan Email"
          id="email"
          name="email"
          required
        />
      </div>
      <button id="register" class="button">Register</button>
    </form>
  </body>
</html>
